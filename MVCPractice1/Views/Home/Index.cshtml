@model List<MVCPractice1.models.Passenger>

<html>

<head>
    <h1>Passengers</h1>
    <style>

        <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js" > </script ></style>
</head>


<body>
    <table class="table table-Primary">
        <thead>
            <tr>
                <th>Seat No.</th>
                <th>Name</th>
                <th>Gender</th>
                <th>Age</th>
                <th>City</th>
                <th>Edit</th>
                <th>Delete</th>

            </tr>
        </thead>

        <tbody>



            @foreach (var passenger in Model)
            {
                <tr>
                    <td>@passenger.Seat</td>
                    <td>@passenger.Name</td>
                    <td>@passenger.Gender</td>
                    <td>@passenger.Age</td>
                    <td>@passenger.City</td>
                    <td><a href="Home/Edit/@passenger.Seat">Edit</a></td>
                    <td><a href="Home/Delete/@passenger.Seat">Delete</a></td>
                </tr>
            }


        </tbody>
    </table>

    <a href="Home\Create\" class="btn btn-primary" >Add Passenger</a><br>
</body>

</html>